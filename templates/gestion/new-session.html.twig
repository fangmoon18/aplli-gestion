{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="bg-color-session margin-b-1 ">
  <h1 class="text-center titre-session contact100-form-title">{%if editMode%} Modifier Session{%else%} Nouvelle Session{%endif%}</h1>
</div>
<div class="wrap-contact100">
  {{ form_start(formSession)}}
  <div class="wrap-input100 rs1-wrap-input100 margin-l-3 large-5">
      <p class="titre-cat">Titre de la Session </p>
      {{form_widget(formSession.titre)}}
  </div>
  <div class="justify-around row">
    <div class="large-5">
        <p class="titre-cat">Date de la formation</p>
        <div class="row justify-center">
          <div class="large-5 wrap-input100 rs1-wrap-input100">
            <label for="" class="label-input100">Date de début : </label>
            {{form_widget(formSession.DebutFormation)}}
          </div>
          <div class="large-5 wrap-input100 rs1-wrap-input100">
            <label for="" class="label-input100">Date de fin : </label>
            {{form_widget(formSession.FinFormation)}}
          </div>
        </div>
    </div>
    <div class="large-5">
        <p class="titre-cat">Date de l'examen</p>
        <div class="row justify-center">
          <div class="large-5 wrap-input100 rs1-wrap-input100">
            <label for="" class="label-input100">Date de début : </label>
            {{form_widget(formSession.DebutExam)}}
          </div>
          <div class="large-5 wrap-input100 rs1-wrap-input100">
            <label for="" class="label-input100">Date de fin : </label>
            {{form_widget(formSession.FinExam)}}
          </div>
        </div>
    </div>
  </div>
  <div class=" margin-l-3 large-5">
      <p class="titre-cat">Date du stage</p>
      <div class="row justify-center">
        <div class="large-5 wrap-input100 rs1-wrap-input100">
          <label for="" class="label-input100">Date de début : </label>
          {{form_widget(formSession.DebutStage)}}
        </div>
        <div class="large-5 wrap-input100 rs1-wrap-input100">
          <label for="" class="label-input100">Date de fin : </label>
          {{form_widget(formSession.FinStage)}}
        </div>
      </div>
  </div>
  <div class="row justify-center margin-t-1">
    <button class="large-2"><a href="{{ path('home')}}" class="contact100-form-btn-2 btn-a">Retour</a></button>
    <button type="submit" class="contact100-form-btn-2">{%if editMode%}Modifier la Session{%else%}Créer la Session{%endif%}</button>
  </div>
  {{ form_end(formSession) }}
</div>

{% endblock %}
